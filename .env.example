# AWS Configuration
AWS_REGION=ap-southeast-2
AWS_ACCOUNT_ID=your_account_id_here
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# ===================
# Vector Database (choose ONE option)
# ===================

# Option 1: Neon Serverless PostgreSQL (recommended - free tier, scales to zero)
DATABASE_URL=postgresql://user:password@ep-xxx.region.aws.neon.tech/neondb?sslmode=require

# Option 2: AWS RDS PostgreSQL
# DB_HOST=your-rds-endpoint.region.rds.amazonaws.com
# DB_PORT=5432
# DB_NAME=novaragdb
# DB_USER=novaragadmin
# DB_PASSWORD=your_database_password_here

# Option 3: Supabase
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_KEY=your_supabase_anon_key_here

# Deployment Configuration
STACK_NAME=nova-rag-db-v2
CLUSTER_NAME=nova-rag-cluster
SERVICE_NAME=nova-rag-service
REPOSITORY_NAME=nova-rag

# Bedrock Models
# nova-lite-v1:0: $0.06/$0.24 per million (cheaper)
# nova-2-lite: $0.30/$2.50 per million (newer, 5x more expensive)
BEDROCK_NOVA_MODEL_ID=amazon.nova-lite-v1:0
BEDROCK_EMBEDDING_MODEL_ID=amazon.titan-embed-text-v2:0

# CLI Configuration
NOVARAG_API_URL=http://localhost:8000

# Application Settings
MAX_RETRIES=3
TEMPERATURE=0.1
MAX_TOKENS=4096
TOP_K_RESULTS=5
EMBEDDING_DIMENSION=1024
